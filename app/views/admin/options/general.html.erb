<div class="body_content general">
  <div class="title">
    <div class="icon"></div>
    <h2><%= t(:general_settings) %></h2>
  </div>
  <form class="inputs" method="post" action="<%= general_admin_options_path %>">
    <div>
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"/>
      <%= render :partial => 'text_input', :locals => { :key => 'site_title' } %>
      <%= render :partial => 'text_input', :locals => { :key => 'tagline', :desc => t(:tagline_desc) } %>
      <%= render :partial => 'text_input', :locals => { :key => 'site_url' } %>
      <%= render :partial => 'text_input', :locals => { :key => 'site_email', :desc => t(:site_email_desc) } %>
      <label for="timezone">
        <strong><%= t(:timezone) %></strong>
      </label>
    </div>
    <div class="clear"></div>
    <p class="default"><input type="submit" class="default" value="<%= t(:save_changes) %>"/></p>
  </form>
</div>
