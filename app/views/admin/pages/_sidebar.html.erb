     <input id="page_savedraft" style="float:left" type="submit" name="draft" value="Save Draft"/>
     <input id="page_preview" style="float:right" type="submit" name="preview" value="Preview"/>
     <div class="clear"></div>
  </div>
  <div class="footer">
     <input id="page_publish" type="button" name="publish" value="Publish"/>
  </div> -->
<% end %>

<% post_box('Tags') do %>
  <%= form.text_field :tag_list %>
<% end %>

<% post_box('Categories') do %>
  <div>
    <ul class="categorychecklist clearfix">
    <% Category.parents.each do |category| %>
      <li>
        <label class="selectit"><%= check_box_tag "page[category_ids][]", category.id, @page.categories.include?(category) %><%= category.name %></label>
        <%= category_children(@page, category) %>
      </li>
    <% end %>
    </ul>
  </div>
<% end %>